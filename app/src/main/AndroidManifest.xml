<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shahar91.sudoku">

    <application
        android:allowBackup="false"
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:isGame="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sudoku">
        <activity
            android:name=".ui.main.MainActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Sudoku.Landing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.old.MainActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:theme="@style/Theme.Sudoku.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".ui.old.Prefs"
            android:label="@string/settings_title"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.old.Game"
            android:label="@string/game_title"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.old.GameList"
            android:label="@string/game_title"
            android:screenOrientation="locked" />
    </application>

</manifest>